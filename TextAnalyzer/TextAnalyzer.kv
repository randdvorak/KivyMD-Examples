MainInterface:

<MainInterface>:
    MDToolbar: 
        title: 'Text Analyzer'
        pos_hint: {'top': 1}
    Widget:
        MDLabel:
            text: 'Data'
            size: dp(100), dp(50)
            pos: dp(190), dp(675)
            font_size: dp(32)
            halign: 'center'
            bold: True
        MDTextFieldRect:
            id: input
            hint_text: 'Type input here...'
            size: dp(400), dp(250)
            pos: dp(40), dp(425)
            theme_text_color: 'Custom'
            background_color: 0,0,0,.3
            font_size: dp(24)
            foreground_color: 1,1,1,1
        MDBoxLayout:
            size_hint: None, None
            size: dp(110), dp(50)
            pos: dp(250), dp(375)
            spacing: dp(10)
            MDRaisedButton:
                text: 'Clear'
                on_release: root.clear()
            MDRaisedButton:
                text: 'Submit'
                on_release: root.submit()
        MDLabel:
            text: 'Information'
            bold: True
            font_size: dp(32)
            size: dp(200), dp(50)
            pos: dp(140), dp(325)
        MDCard:
            orientation: 'vertical'
            size: dp(200), dp(150)
            pos: dp(35), dp(175)
            MDLabel:
                text: '# of words'
                size_hint: 1, .3
                font_size: dp(24)
                pos_hint: {'top': 1}
                bold: True
                halign: 'center'
                md_bg_color: 0,0,0,.3
                radius: [0,0,14,14]
            MDLabel:
                id: no_words
                text: '00'
                halign: 'center'
                font_size: dp(64)
        MDCard:
            orientation: 'vertical'
            size: dp(200), dp(150)
            pos: dp(245), dp(175)
            MDLabel:
                text: '# of sentences'
                size_hint: 1, .3
                font_size: dp(24)
                pos_hint: {'top': 1}
                bold: True
                halign: 'center'
                md_bg_color: 0,0,0,.3
                radius: [0,0,14,14]
            MDLabel:
                id: no_sentences
                text: '00'
                halign: 'center'
                font_size: dp(64)
        MDCard:
            orientation: 'vertical'
            size: dp(200), dp(150)
            pos: dp(35), dp(15)
            MDLabel:
                text: 'Polarity'
                size_hint: 1, .3
                font_size: dp(24)
                pos_hint: {'top': 1}
                bold: True
                halign: 'center'
                md_bg_color: 0,0,0,.3
                radius: [0,0,14,14]
            MDLabel:
                id: polarity
                text: '0.0%'
                halign: 'center'
                font_size: dp(48)
        MDCard:
            orientation: 'vertical'
            size: dp(200), dp(150)
            pos: dp(245), dp(15)
            MDLabel:
                text: 'Subjectivity'
                size_hint: 1, .3
                font_size: dp(24)
                pos_hint: {'top': 1}
                bold: True
                halign: 'center'
                md_bg_color: 0,0,0,.3
                radius: [0,0,14,14]
            MDLabel:
                id: sentiment
                text: '0.0%'
                halign: 'center'
                font_size: dp(48)




        

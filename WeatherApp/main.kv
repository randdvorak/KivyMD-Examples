ScreenManager:
    HomeScreen

<HomeScreen>:
    FloatLayout:
        MDToolbar:
            title: 'Weather Search'
            pos_hint: {'top': 1}
        BoxLayout:
            orientation: 'vertical'
            FloatLayout:
                CitySearchField:
                    id: current_city
                    hint_text: 'City name'
                    mode: 'rectangle'
                    pos_hint: {'top':.9 }
                    size_hint: 1,.05
                    multiline: False
                MDRectangleFlatIconButton:
                    text: 'Search'
                    icon: 'magnify'
                    pos_hint: {'top':.85 }
                    size_hint: 1,.05
                    disabled: root.ids.current_city.current_city_link == ''
                    on_press: root.get_city_data(root.ids.current_city.current_city_link)
                GridLayout:
                    cols: 1
                    pos_hint: {'top':.75}
                    size_hint: 1,.2
                    MDLabel:
                        text: root.city_name
                        halign: 'center'
                        font_style: 'H3'
                    MDLabel:
                        text: root.country_name
                        halign: 'center'
                        font_style: 'Subtitle2'
                    MDLabel:
                        text: root.datetime
                        halign: 'center'
                        font_style: 'Subtitle1'
                GridLayout:
                    cols: 1
                    pos_hint: {'top':.6}
                    size_hint: 1,.4
                    MDLabel:
                        text: root.temperature
                        font_size: dp(72)
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 0, 0, 1, 1
                    MDLabel:
                        text: root.condition
                        font_size: dp(24)
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 0, 0, 1, 1
                GridLayout:
                    cols: 3
                    rows: 2
                    pos_hint: {'top': .3}
                    size_hint: 1, .3
                    MDLabel:
                        text: 'Humidity'
                        font_size: dp(16)
                        size_hint: .33, .2
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    MDLabel:
                        text: 'Pressure'
                        font_size: dp(16)
                        size_hint: .33, .2
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    MDLabel:
                        text: 'Visibility'
                        font_size: dp(16)
                        size_hint: .33, .2
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    MDLabel:
                        text: '[u]{}[/u]'.format(root.humidity)
                        markup: True
                        font_style: 'Subtitle1'
                        size_hint: .33, .2
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 0, 1, 0, 1
                    MDLabel:
                        text: '[u]{}[/u]'.format(root.pressure)
                        markup: True
                        size_hint: .33, .2
                        halign: 'center'
                        font_style: 'Subtitle1'
                        theme_text_color: "Custom"
                        text_color: 0, 1, 0, 1
                    MDLabel:
                        text: '[u]{}[/u]'.format(root.visibility)
                        markup: True
                        halign: 'center'
                        size_hint: .33, .2
                        font_style: 'Subtitle1'
                        theme_text_color: "Custom"
                        text_color: 0, 1, 0, 1
